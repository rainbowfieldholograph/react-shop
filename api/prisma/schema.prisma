generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int         @id @default(autoincrement())
  title        String      @unique
  price        Int         @default(999)
  image        String
  sizes        String[]
  descr        String
  benefits     String[]
  collection   Collection? @relation(fields: [collectionId], references: [id])
  collectionId Int?
  createdAt    DateTime    @default(now())
}

model Collection {
  id       Int       @id @default(autoincrement())
  title    String    @unique
  image    String
  products Product[]
}
